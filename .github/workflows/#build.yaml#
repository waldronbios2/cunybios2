${{ env.R_LIBS_USER }}A
          key: ${{ runner.os }}-r-4.4-${{ hashFiles('**/DESCRIPTION') }}
	            restore-keys: |
		                ${{ runner.os }}-r-4.4-

      - name: Install R dependencies (including pkgdown)
              uses: r-lib/actions/setup-r-dependencies@v2
	              with:
		                packages: any::pkgdown # Example: ensure pkgdown is installed

      - name: Render README
              run: Rscript -e 'rmarkdown::render("README.Rmd", output_file = "README.md")'

      - name: Build pkgdown site
              run: Rscript -e 'pkgdown::build_site()'

      - name: Commit updated README
              uses: stefanzweifel/git-auto-commit-action@v5
	              with:
		                commit_message: "Update README.md [skip ci]"
				          file_pattern: README.md
					            commit_user_name: Levi's GitHub Robot
						              commit_user_email: lwaldron.research@gmail.com

      - name: Deploy to GitHub Pages ðŸš€
              uses: JamesIves/github-pages-deploy-action@v4
	              with:
		                branch: gh-pages # The branch the action should deploy to.
				          folder: docs # The folder the action should deploy.

      - name: Setup Docker buildx
              uses: docker/setup-buildx-action@v3

      - name: Login to GitHub Container Registry
              uses: docker/login-action@v3
	              with:
		                registry: ${{ env.REGISTRY }}
				          username: ${{ github.actor }}
					            password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push Docker image
              uses: docker/build-push-action@v6
	              with:
		                context: .
				          push: ${{ github.event_name != 'pull_request' }} # Push only on merge/direct push, not PR
					            tags: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest~